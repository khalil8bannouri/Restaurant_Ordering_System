# ==============================================================================
# AI RESTAURANT ORDERING SYSTEM - ENVIRONMENT CONFIGURATION
# ==============================================================================
# 
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# ==============================================================================

# ==============================================================================
# ENVIRONMENT MODE
# ==============================================================================
# Options: development, staging, production
# - development: Uses mock services (no API keys needed)
# - staging: Uses real APIs with test keys
# - production: Uses real APIs with live keys

ENV_MODE=development
DEBUG=true

# ==============================================================================
# APPLICATION
# ==============================================================================

APP_NAME="AI Pizza Palace"
APP_VERSION="2.0.0"
API_HOST=0.0.0.0
API_PORT=8001

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
# Format: postgresql+psycopg://user:password@host:port/database

DATABASE_URL=postgresql+psycopg://restaurant_admin:secretpassword123@localhost:5433/restaurant_orders

# ==============================================================================
# REDIS (Message Queue)
# ==============================================================================

REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# STRIPE PAYMENT GATEWAY
# ==============================================================================
# Get your keys at: https://dashboard.stripe.com/apikeys
#
# Test Mode Keys (for development/staging):
#   - Start with sk_test and pk_test
#   - Use test card: 4242 4242 4242 4242
#
# Live Mode Keys (for production):
#   - Start with sk_live_ and pk_live_
#   - Processes real payments!

STRIPE_SECRET_KEY=STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_CURRENCY=usd

# ==============================================================================
# GOOGLE MAPS API
# ==============================================================================
# Get your key at: https://console.cloud.google.com/apis/credentials
# Enable: Geocoding API, Distance Matrix API

GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ==============================================================================
# VAPI.AI VOICE INTEGRATION
# ==============================================================================
# Get your keys at: https://dashboard.vapi.ai
# 
# Webhook URL to configure in Vapi Dashboard:
#   https://your-domain.com/webhook/vapi

VAPI_API_KEY=your_vapi_api_key_here
VAPI_WEBHOOK_SECRET=your_vapi_webhook_secret_here
VAPI_ASSISTANT_ID=your_vapi_assistant_id_here

# ==============================================================================
# BUSINESS CONFIGURATION
# ==============================================================================

RESTAURANT_NAME="AI Pizza Palace"
RESTAURANT_PHONE="+1-555-123-4567"
DELIVERY_RADIUS_MILES=5.0
TAX_RATE=0.08875
DELIVERY_FEE=5.99
ESTIMATED_DELIVERY_MINUTES=40

# ==============================================================================
# VALID DELIVERY ZONES
# ==============================================================================
# Comma-separated zip codes where delivery is available

VALID_ZIP_CODES=10001,10002,10003,10004,10005,10006,10007,10008,10009,10010,10011,10012,10013,10014,10016,10017,10018,10019,10020,10021

# ==============================================================================
# FILE STORAGE
# ==============================================================================

DATA_DIRECTORY=data
EXCEL_FILENAME=orders.xlsx
EXCEL_LOCK_TIMEOUT=30